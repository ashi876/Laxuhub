{
  "version": "1.0",
  "environments": {
    "python": {
      "display_name": "Python",
      "base_dir": "green_python",
      "path_dirs": ["", "Scripts"],
      "env_vars": {
        "PYTHON_HOME": "{full_path}"
      },
      "searchprefix_string": ["python", "cpython"]
    },
    "node": {
      "display_name": "Node.js", 
      "base_dir": "green_node",
      "path_dirs": [""],
      "env_vars": {
        "NODE_HOME": "{full_path}"
      },
      "searchprefix_string": ["node", "nodejs"]
    },
    "go": {
      "display_name": "Go",
      "base_dir": "green_go", 
      "path_dirs": ["bin"],
      "env_vars": {
        "GO_ROOT": "{full_path}",
        "GO_HOME": "{full_path}/bin"
      },
      "searchprefix_string": ["go", "golang"]
    },
    "java": {
      "display_name": "Java",
      "base_dir": "green_java",
      "path_dirs": ["bin"],
      "env_vars": {
        "JAVA_ROOT": "{full_path}",
        "JAVA_HOME": "{full_path}/bin"
      },
      "searchprefix_string": ["java", "jdk", "openjdk", "jre"]
    },
    "rust": {
      "display_name": "Rust",
      "base_dir": "green_rust",
      "path_dirs": ["bin"],
      "env_vars": {
        "RUST_HOME": "{full_path}"
      },
      "searchprefix_string": ["rust"]
    }
  }
}